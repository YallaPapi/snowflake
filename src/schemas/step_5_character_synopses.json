{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Step 5: Character Synopses",
  "type": "object",
  "required": ["characters", "metadata"],
  "additionalProperties": false,
  "properties": {
    "characters": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "synopsis"],
        "properties": {
          "name": {"type": "string", "minLength": 1},
          "synopsis": {"type": "string", "minLength": 300}
        }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["project_id", "step", "version", "created_at", "hash_upstream"],
      "properties": {
        "project_id": {"type": "string"},
        "step": {"type": "integer", "const": 5},
        "version": {"type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$"},
        "created_at": {"type": "string", "format": "date-time"},
        "model_name": {"type": "string"},
        "temperature": {"type": "number"},
        "seed": {"type": ["number", "null"]},
        "prompt_hash": {"type": "string"},
        "validator_version": {"type": "string"},
        "hash_upstream": {"type": "string"}
      }
    }
  }
}
