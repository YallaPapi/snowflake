{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Step 11: Comic Script Artifact",
  "description": "Schema for comic script artifacts generated from manuscript conversion",
  "type": "object",
  "required": [
    "metadata",
    "script_format",
    "total_pages",
    "total_panels", 
    "pages",
    "character_designs",
    "panel_statistics"
  ],
  "properties": {
    "metadata": {
      "type": "object",
      "required": [
        "step",
        "step_name",
        "project_id",
        "created_at",
        "version",
        "source_step",
        "format"
      ],
      "properties": {
        "step": {
          "type": "integer",
          "const": 11
        },
        "step_name": {
          "type": "string",
          "const": "manuscript_to_script"
        },
        "project_id": {
          "type": "string",
          "minLength": 1
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "source_step": {
          "type": "integer",
          "const": 10
        },
        "format": {
          "type": "string",
          "const": "full_script_dc_style"
        }
      }
    },
    "script_format": {
      "type": "string",
      "enum": ["full_script", "marvel_method", "indie"]
    },
    "total_pages": {
      "type": "integer",
      "minimum": 1
    },
    "total_panels": {
      "type": "integer", 
      "minimum": 1
    },
    "pages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/page"
      }
    },
    "character_designs": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z0-9_\\s]+$": {
          "$ref": "#/definitions/character_design"
        }
      }
    },
    "panel_statistics": {
      "$ref": "#/definitions/panel_statistics"
    }
  },
  "definitions": {
    "page": {
      "type": "object",
      "required": [
        "page_number",
        "panel_count", 
        "panels"
      ],
      "properties": {
        "page_number": {
          "type": "integer",
          "minimum": 1
        },
        "scene_index": {
          "type": "integer",
          "minimum": 0
        },
        "panel_count": {
          "type": "integer",
          "minimum": 3,
          "maximum": 9
        },
        "panels": {
          "type": "array",
          "minItems": 3,
          "maxItems": 9,
          "items": {
            "$ref": "#/definitions/panel"
          }
        }
      }
    },
    "panel": {
      "type": "object",
      "required": [
        "panel_number",
        "description",
        "dialogue",
        "transition_type"
      ],
      "properties": {
        "panel_number": {
          "type": "integer",
          "minimum": 1
        },
        "description": {
          "type": "string",
          "minLength": 10
        },
        "dialogue": {
          "type": "array",
          "maxItems": 3,
          "items": {
            "$ref": "#/definitions/dialogue_entry"
          }
        },
        "transition_type": {
          "type": "string",
          "enum": [
            "moment_to_moment",
            "action_to_action", 
            "subject_to_subject",
            "scene_to_scene",
            "aspect_to_aspect",
            "non_sequitur"
          ]
        },
        "characters": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "shot_type": {
          "type": "string",
          "enum": [
            "close_up",
            "medium_shot",
            "wide_shot",
            "extreme_close_up",
            "establishing_shot"
          ]
        },
        "mood": {
          "type": "string"
        },
        "word_count": {
          "type": "integer",
          "minimum": 0,
          "maximum": 50
        }
      }
    },
    "dialogue_entry": {
      "type": "object",
      "required": [
        "character",
        "type",
        "text"
      ],
      "properties": {
        "character": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "enum": ["balloon", "caption", "thought", "sfx"]
        },
        "text": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200
        }
      }
    },
    "character_design": {
      "type": "object",
      "required": ["description"],
      "properties": {
        "description": {
          "type": "string",
          "minLength": 10
        },
        "height": {
          "type": "string"
        },
        "build": {
          "type": "string"
        },
        "hair": {
          "type": "string"
        },
        "eyes": {
          "type": "string"
        },
        "distinguishing_features": {
          "type": "string"
        },
        "typical_clothing": {
          "type": "string"
        },
        "color_palette": {
          "type": "string"
        }
      }
    },
    "panel_statistics": {
      "type": "object",
      "required": [
        "total_panels",
        "total_pages",
        "avg_panels_per_page",
        "max_panels_per_page",
        "min_panels_per_page",
        "avg_words_per_panel",
        "max_words_per_panel"
      ],
      "properties": {
        "total_panels": {
          "type": "integer",
          "minimum": 1
        },
        "total_pages": {
          "type": "integer", 
          "minimum": 1
        },
        "avg_panels_per_page": {
          "type": "number",
          "minimum": 0
        },
        "max_panels_per_page": {
          "type": "integer",
          "minimum": 1,
          "maximum": 9
        },
        "min_panels_per_page": {
          "type": "integer",
          "minimum": 1
        },
        "avg_words_per_panel": {
          "type": "number",
          "minimum": 0
        },
        "max_words_per_panel": {
          "type": "integer",
          "minimum": 0,
          "maximum": 50
        }
      }
    }
  }
}