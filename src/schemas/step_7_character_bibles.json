{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Step 7: Character Bibles",
  "type": "object",
  "required": ["bibles", "metadata"],
  "additionalProperties": false,
  "properties": {
    "bibles": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "personality", "voice_notes"],
        "properties": {
          "name": {"type": "string", "minLength": 1},
          "physical": {"type": "object"},
          "personality": {"type": "string", "minLength": 10},
          "environment": {"type": "object"},
          "psychology": {"type": "object"},
          "voice_notes": {"type": "array", "items": {"type": "string"}}
        }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["project_id", "step", "version", "created_at", "hash_upstream"],
      "properties": {
        "project_id": {"type": "string"},
        "step": {"type": "integer", "const": 7},
        "version": {"type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$"},
        "created_at": {"type": "string", "format": "date-time"},
        "model_name": {"type": "string"},
        "temperature": {"type": "number"},
        "seed": {"type": ["number", "null"]},
        "prompt_hash": {"type": "string"},
        "validator_version": {"type": "string"},
        "hash_upstream": {"type": "string", "description": "SHA256 hash of Step 5 artifact"}
      }
    }
  }
}
